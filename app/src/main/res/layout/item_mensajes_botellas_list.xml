<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="11dp"
    android:paddingTop="7dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/fondoItemMensajeBotella"
    android:background="@drawable/background_item_mensaje_botella">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/2012 14:58"
        android:ellipsize="end"
        android:id="@+id/fechaTV"
        android:textColor="#5786ce"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp" />

    <com.facebook.widget.ProfilePictureView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/fechaTV"
        android:src="@drawable/com_facebook_place_default_icon"
        app:preset_size="small"
        android:id="@+id/fotoAutorImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Francisco Martín Fernández"
        android:id="@+id/nombreAutorTV"
        android:textSize="18dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="25"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/fotoAutorImage"
        android:layout_alignBottom="@+id/fotoAutorImage"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me llena de orgullo y satisfacción abdicar ante mi hijo, el nuevo Rey Felipe VI. ¡Vida el Rey!"
        android:id="@+id/mensajeBotellaTV"
        android:textSize="18dp"
        android:layout_below="@+id/nombreAutorTV"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playa de Benijos"
        android:id="@+id/playaOrigenTV"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="#007900"
        android:layout_below="@+id/mensajeBotellaTV"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

</RelativeLayout>