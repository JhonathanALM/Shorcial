<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_above="@+id/irPlayaBTN"
        android:background="@drawable/background_fragments">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="11dp"
            android:paddingTop="7dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/dataRL">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombreTV"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombreTV"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:id="@+id/starsRL">

                <ImageView
                    android:id="@+id/v1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/v2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/v1"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/v3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/v2"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/v4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/v3"
                    android:src="@drawable/star_off" />

                <ImageView
                    android:id="@+id/v5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/v4"
                    android:src="@drawable/star_off" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/nombreTV"
                android:textColor="#eeb400"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:id="@+id/temp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:textSize="40sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temp"
                android:layout_marginTop="15dp"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/banderaAzulImage"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/dificultadAccesoImage"
                    android:layout_toRightOf="@+id/banderaAzulImage"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/limpiezaImage"
                    android:layout_toRightOf="@+id/dificultadAccesoImage"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/tipoArenaImage"
                    android:layout_toRightOf="@+id/limpiezaImage"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/rompeolasImage"
                    android:layout_toRightOf="@+id/tipoArenaImage"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/hamacasImage"
                    android:layout_below="@+id/banderaAzulImage"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/sombrillasImage"
                    android:layout_below="@+id/banderaAzulImage"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/hamacasImage"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/chiringuitosImage"
                    android:layout_below="@+id/banderaAzulImage"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sombrillasImage"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/duchasImage"
                    android:layout_below="@+id/banderaAzulImage"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/chiringuitosImage"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/socorristaImage"
                    android:layout_below="@+id/banderaAzulImage"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/duchasImage"/>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dataRL"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/rlMap"
            android:paddingBottom="15dp">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/irPlayaBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#ffed6a"
        android:textStyle="bold"
        android:background="@drawable/background_boton"
        android:text="@string/mostrar_ruta"/>

</RelativeLayout>
