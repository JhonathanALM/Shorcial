

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/background_fragments">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="11dp"
            android:paddingTop="7dp"
            android:descendantFocusability="blocksDescendants"
            android:layout_weight="2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombreTV"
                android:textSize="20dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Playaza ..."
                android:padding="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25ยบ C"
                android:textStyle="bold"
                android:maxLines="1"
                android:maxLength="20"
                android:ellipsize="end"
                android:id="@+id/temp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="40sp"
                android:layout_above="@+id/relativeLayout" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="11dp"
                android:paddingTop="7dp"
                android:descendantFocusability="blocksDescendants"
                android:layout_weight="2"
                android:layout_below="@+id/nombreTV"
                android:id="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/banderaazul_300x300"
                    android:id="@+id/banderaAzulImage0"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage1"
                    android:layout_alignTop="@+id/banderaAzulImage0"
                    android:layout_toRightOf="@+id/banderaAzulImage0"
                    android:layout_marginRight="10dp" />



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage2"
                    android:layout_alignTop="@+id/banderaAzulImage1"
                    android:layout_toRightOf="@+id/banderaAzulImage1"
                    android:layout_marginRight="10dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage3"
                    android:layout_alignTop="@+id/banderaAzulImage2"
                    android:layout_toRightOf="@+id/banderaAzulImage2"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage4"
                    android:layout_alignTop="@+id/banderaAzulImage3"
                    android:layout_toRightOf="@+id/banderaAzulImage3" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="10dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage6"
                    android:layout_alignTop="@+id/banderaAzulImage5"
                    android:layout_toRightOf="@+id/banderaAzulImage5"
                    android:layout_marginRight="10dp" />



                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage7"
                    android:layout_alignTop="@+id/banderaAzulImage6"
                    android:layout_toRightOf="@+id/banderaAzulImage6"
                    android:layout_marginRight="10dp" />


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage8"
                    android:layout_alignTop="@+id/banderaAzulImage7"
                    android:layout_toRightOf="@+id/banderaAzulImage7"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/com_facebook_place_default_icon"
                    android:id="@+id/banderaAzulImage9"
                    android:layout_alignTop="@+id/banderaAzulImage8"
                    android:layout_toRightOf="@+id/banderaAzulImage8" />

            </RelativeLayout>


        </RelativeLayout>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="15dp"
            android:name="com.google.android.gms.maps.MapFragment"/>

    </LinearLayout>
</LinearLayout>


