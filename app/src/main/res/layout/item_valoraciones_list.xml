<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="11dp"
    android:paddingTop="7dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/fondoItemValoraciones"
    android:background="@drawable/background_fragments">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/starsRL">

        <ImageView
            android:id="@+id/v1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/star_off" />

        <ImageView
            android:id="@+id/v2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v1"
            android:src="@android:drawable/star_off" />

        <ImageView
            android:id="@+id/v3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v2"
            android:src="@android:drawable/star_off" />

        <ImageView
            android:id="@+id/v4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v3"
            android:src="@android:drawable/star_off" />

        <ImageView
            android:id="@+id/v5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/v4"
            android:src="@android:drawable/star_off" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+id/fechaTV"
        android:textColor="#5786ce"
        android:textSize="18sp"
        android:layout_below="@+id/starsRL"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp" />

    <com.facebook.widget.ProfilePictureView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-7dp"
        android:layout_below="@+id/fechaTV"
        android:src="@drawable/com_facebook_place_default_icon"
        app:preset_size="small"
        android:id="@+id/fotoAutorImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreAutorTV"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/fotoAutorImage"
        android:layout_alignBottom="@+id/fotoAutorImage"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valoracionTV"
        android:textSize="18sp"
        android:layout_below="@+id/nombreAutorTV"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

</RelativeLayout>