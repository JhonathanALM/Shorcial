<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="11dp"
    android:paddingTop="7dp"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/fondoItemPlaya"
    android:background="@drawable/background_listview_playas_selector">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-6dp"
        android:visibility="gone"
        android:id="@+id/webcam_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreTV"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="18"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/webcam_icon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"
        android:id="@+id/distanciaTV"
        android:textColor="#3e9fc0"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/nombreTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valoracionTV"
        android:textSize="48sp"
        android:layout_alignBottom="@+id/socorristaImage"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_checkins"
        android:id="@+id/title_checkins"
        android:visibility="gone"
        android:textColor="#D95100"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/socorristaImage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#D95100"
        android:id="@+id/checkinsTV"
        android:textSize="38sp"
        android:layout_above="@+id/title_checkins"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:layout_alignBottom="@+id/socorristaImage"
        android:layout_marginBottom="5dp"
        android:id="@+id/checkin_icon"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombreTV"
        android:layout_marginTop="10dp"
        android:id="@+id/banderaAzulImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombreTV"
        android:layout_toRightOf="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:id="@+id/dificultadAccesoImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombreTV"
        android:layout_toRightOf="@+id/dificultadAccesoImage"
        android:layout_marginTop="10dp"
        android:id="@+id/limpiezaImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombreTV"
        android:layout_toRightOf="@+id/limpiezaImage"
        android:layout_marginTop="10dp"
        android:id="@+id/tipoArenaImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombreTV"
        android:layout_toRightOf="@+id/tipoArenaImage"
        android:layout_marginTop="10dp"
        android:id="@+id/rompeolasImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:id="@+id/hamacasImage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hamacasImage"
        android:id="@+id/sombrillasImage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/sombrillasImage"
        android:id="@+id/chiringuitosImage"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/chiringuitosImage"
        android:id="@+id/duchasImage" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/banderaAzulImage"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/duchasImage"
        android:id="@+id/socorristaImage"/>



</RelativeLayout>